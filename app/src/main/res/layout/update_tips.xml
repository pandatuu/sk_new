<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
         android:layout_width="match_parent"
         android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="38dp"
            android:orientation="vertical"
            android:background="#FFFFFF">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="237dp"
                android:orientation="vertical">
            <android.support.v7.widget.AppCompatImageView 
                    android:layout_width="match_parent"
                    android:layout_height="164dp"
                    android:background="@mipmap/update_background"/>
            <TextView
                    android:layout_width="200dp"
                    android:layout_height="19dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="1.ビデオ面接機能を追加しまし"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="19dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="18dp"
                    android:layout_marginBottom="6dp"
                    android:text="2.フィードバック情報がbugに遅れていたこ とを復旧しまし"/>
        </LinearLayout>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="103dp"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">
            <Button
                    android:id="@+id/update_cancel"
                    android:layout_width="120dp"
                    android:layout_height="39dp"
                    android:layout_marginTop="29dp"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/yellow_boder"
                    android:text="キャンセル"
                    android:textSize="16sp"
                    android:textColor="#202020"
                    android:onClick="cancelClick"/>
            <Button
                    android:id="@+id/update_determine"
                    android:layout_width="120dp"
                    android:layout_height="39dp"
                    android:layout_marginTop="29dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/yellow_background"
                    android:text="確定"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:onClick="determineClick"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>