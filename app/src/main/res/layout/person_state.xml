<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
         android:layout_width="match_parent" android:background="#000000"
         android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:id="@+id/person_state"
                  android:background="#ffffff"
                  android:layout_height="312dp">

        <LinearLayout android:layout_width="match_parent"
                      android:background="@color/whiteFF"
                      android:orientation="horizontal"
                      android:layout_height="59dp">
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_weight="1"
                          android:layout_height="match_parent"></LinearLayout>
            <ImageView android:layout_width="17dp"
                       android:id="@+id/state_image"
                       android:layout_gravity="center"
                       android:layout_marginRight="15dp"
                       android:background="@mipmap/state_close"
                       android:layout_height="17dp"/>
        </LinearLayout>

        <TextView android:layout_width="match_parent"
                  android:layout_marginRight="36dp"
                  android:layout_gravity="center"
                  android:layout_marginLeft="36dp"
                  android:text="あなたの基本情報の入力はまだ完成されていません。基本情報が書き終わった上、また求人情報の検索機能をご利用ください
"
                  android:layout_marginBottom="16dp"
                  android:layout_height="wrap_content"/>

        <TextView android:layout_width="match_parent"
                  android:background="@drawable/button_border"
                  android:layout_marginLeft="31dp"
                  android:layout_marginRight="31dp"
                  android:id="@+id/state_required"
                  android:text="今から書きます"
                  android:textSize="15sp"
                  android:textColor="@color/whiteFF"
                  android:gravity="center"
                  android:layout_marginBottom="14dp"
                  android:layout_height="44dp"></TextView>

        <TextView android:layout_width="match_parent"
                  android:background="@drawable/button_gray"
                  android:layout_marginLeft="31dp"
                  android:layout_marginRight="31dp"
                  android:id="@+id/state_cancel"
                  android:text="また後で"
                  android:textSize="15sp"
                  android:textColor="@color/whiteFF"
                  android:gravity="center"
                  android:layout_height="44dp"></TextView>
    </LinearLayout>

</LinearLayout>