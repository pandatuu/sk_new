<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 正三角 -->
    <item>
        <rotate
                android:fromDegrees="45"
                android:pivotX="-40%"
                android:pivotY="86%">
            <shape android:shape="rectangle">
                <size
                        android:width="16dp"
                        android:height="16dp" />
                <solid android:color="#F6F6F6" />
            </shape>
        </rotate>
    </item>
</layer-list>